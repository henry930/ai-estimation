// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  githubToken   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  projects      Project[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Subscription {
  id               String    @id @default(cuid())
  userId           String
  plan             String // "free", "pro", "team"
  status           String // "active", "cancelled", "expired"
  startDate        DateTime  @default(now())
  endDate          DateTime?
  stripeCustomerId String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model Project {
  id           String   @id @default(cuid())
  userId       String
  name         String
  description  String?
  githubUrl    String?
  githubRepoId String?
  status       String   @default("active") // "active", "archived", "syncing"
  lastSync     DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  estimations Estimation[]
  chatHistory ChatHistory[]
  taskGroups  TaskGroup[]

  @@map("projects")
}

model TaskGroup {
  id        String   @id @default(cuid())
  projectId String
  title     String
  order     Int      @default(0)
  tasks     Task[]
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("task_groups")
}

model Task {
  id          String    @id @default(cuid())
  groupId     String
  title       String
  description String?
  hours       Int?
  completed   Boolean   @default(false)
  branch      String?
  order       Int       @default(0)
  group       TaskGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

model Estimation {
  id         String   @id @default(cuid())
  projectId  String
  tasks      String // Structured task breakdown (JSON string)
  totalHours Int
  minHours   Int?
  maxHours   Int?
  cost       Float? // Estimated cost
  currency   String   @default("USD")
  status     String // "draft", "confirmed", "completed"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("estimations")
}

model ChatHistory {
  id        String   @id @default(cuid())
  projectId String
  messages  String // Array of chat messages (JSON string)
  context   String? // Additional context (JSON string)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("chat_history")
}
